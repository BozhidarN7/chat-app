{
    "compilerOptions": {
        "baseUrl": "./src",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src",
        "src/App.tsxsrc/index.jsx.js",
        "src/lib/tailwind.ts",
        "tailwind.config.js"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
